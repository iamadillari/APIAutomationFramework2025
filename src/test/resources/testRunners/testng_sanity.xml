    <test name="Validating the functionality of the Contacts API">
        <classes>
            <class name="com.qa.api.contactsApi.tests.ContactsApiTest"></class>
        </classes>
    </test>

    <test name="Validating the Get Users API endpoint">
        <classes>
            <class name="com.qa.api.reqResApi.tests.ReqResTest"></class>
        </classes>
    </test>

    <test name="Validating the Amadeus API endpoints">
        <classes>
            <class name="com.qa.api.amadeusAPI.tests.AmadeusApiTest"></class>
