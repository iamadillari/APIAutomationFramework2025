<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="API Regression Test Suite">

    <test name="Validating the Functionality of the Contacts API">
        <classes>
            <class name="com.qa.api.contactsApi.tests.ContactsApiTest"></class>
        </classes>
    </test>

    <test name="Validating the Get Users API endpoint">
        <classes>
            <class name="com.qa.api.reqResApi.tests.ReqResTest"></class>
        </classes>
    </test>

    <test name="Validating the Amadeus API endpoints">
        <classes>
            <class name="com.qa.api.amadeusAPI.tests.AmadeusApiTest"></class>
        </classes>
    </test>

    <test name="Validating the Functionality of basic Authentication">
        <classes>
            <class name="com.qa.api.basicAuth.tests.BasicAuthTest"></class>
        </classes>
    </test>

    <test name="Validating API schemas of the GoRest User APIs">
        <classes>
            <class name="com.qa.api.schemaValidation.tests.GoRestUserApiSchemaTest"></class>
        </classes>
    </test>

    <test name="Validating Go Rest API using Data Provider for multiple set of data">
        <classes>
            <class name="com.qa.api.gorestApi.tests.CreateUserTest"></class>
        </classes>
    </test>

    <test name="Validating the functionality of deleting a user in the GoRest API.">
        <classes>
            <class name="com.qa.api.gorestApi.tests.DeleteUserTest"></class>
        </classes>
    </test>

    <test name="Validating Go Rest API for creating and retrieving a user using deserialization">
        <classes>
            <class name="com.qa.api.gorestApi.tests.GetAUserWithDeserializationTest"></class>
        </classes>
    </test>

    <test name="Validating Go Rest API to retrieve user details from the API">
        <classes>
            <class name="com.qa.api.gorestApi.tests.GetUserTest"></class>
        </classes>
    </test>

    <test name="Validating Go Rest API for creating a user, fetching the user details, and updating the user">
        <classes>
            <class name="com.qa.api.gorestApi.tests.UpdateUserTest"></class>
        </classes>
    </test>

    <test name="Validating retrieval of all the products from the Product API">
        <classes>
            <class name="com.qa.api.productsApi.tests.ProductAPITest"></class>
        </classes>
    </test>

    <test name="Validating the FakeStore API endpoints">
        <classes>
            <class name="com.qa.api.productsApi.tests.ProductApiWithJsonPathTest"></class>
        </classes>
    </test>


    <listeners>
        <listener class-name="com.aventstack.chaintest.plugins.ChainTestListener"/>
    </listeners>

</suite>