<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="API Regression Test Suite" verbose="4">

    <listeners>
        <listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
    </listeners>
    <test name="Validating the functionality of the Contacts API">
        <classes>
            <class name="com.qa.api.contactsApi.tests.ContactsApiTest"></class>
        </classes>
    </test>

    <test name="Validating the Get Users API endpoint">
        <classes>
            <class name="com.qa.api.reqResApi.tests.ReqResTest"></class>
        </classes>
    </test>

    <test name="Validating the Amadeus API endpoints">
        <classes>
            <class name="com.qa.api.amadeusAPI.tests.AmadeusApiTest"></class>
        </classes>
    </test>

    <test name="Validating the functionality of Basic Authentication">
        <classes>
            <class name="com.qa.api.basicAuth.tests.BasicAuthTest"></class>
        </classes>
    </test>

    <test name="Validating API schemas of GoRest User APIs.">
        <classes>
            <class name="com.qa.api.schemaValidation.tests.GoRestUserApiSchemaTest"></class>
        </classes>
    </test>

</suite>